    "url": "https://github.com/bitwyre/sdk/issues"
  },
  "homepage": "https://github.com/bitwyre/sdk#readme",
  "dependencies": {
    "axios": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.2",
    "babel-jest": "^29.1.2",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  },
  "directories": {
    "test": "test"
  }
